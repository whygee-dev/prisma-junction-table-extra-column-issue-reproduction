generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id        Int      @id @default(autoincrement())
  createdBy String
  books     Book[]
}

model Book {
  id        Int      @id @default(autoincrement())
  createdBy String
  authors   Author[]
}

model AuthorToBook {
  A Int
  B Int
  createdBy String

  @@id([A, B])
  @@map("_AuthorToBook")
}